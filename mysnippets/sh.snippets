snippet #! "shebang"
#!/usr/bin/env $0
endsnippet

snippet bash "bash shebang"
#!/usr/bin/env bash$0
endsnippet

snippet case "case .. esac (case)"
case ${1:word} in
	${2:pattern})
		$0;;
esac
endsnippet

snippet fn "function"
${1:function_name}() {
	${0:#function_body}
}
endsnippet

snippet ft "modline filetype"
# vim:ft=${1:zsh}:
endsnippet
